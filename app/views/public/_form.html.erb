<% form_for(@book) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author_list %>
  </div>
  <div class="field">
    <%= f.label :genre %><br />
    <%= f.text_field :genre_list %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </div>
  <% if current_page?(:controller => 'public', :action => 'new_sought') %>
	<%= f.hidden_field(:state, :value => 'is_being_sought') %>
  <% else %>
	<%= f.hidden_field(:state, :value => 'existing') %> 
  <% end %>  
  <div class="actions">   
	<%= f.submit(:controller => 'public', :action => 'create') %>
  </div>
<% end %>
