<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>Fullname</th>
    <th>City</th>
    <th>Country</th>
    <th>Email</th>
    <th>Skype</th>
    <th>Icq</th>
    <th>Mobile</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.fullname %></td>
    <td><%= user.city %></td>
    <td><%= user.country %></td>
    <td><%= user.email %></td>
    <td><%= user.skype %></td>
    <td><%= user.icq %></td>
    <td><%= user.mobile %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

